{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@ecohatch/config-typescript/node.json",
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": "./",
    "rootDir": "src",
    "moduleResolution": "node",
    "tsBuildInfoFile": "node_modules/.cache/tsbuildinfo.json"
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
