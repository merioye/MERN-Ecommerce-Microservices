{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env*"],
  "tasks": {
    "build": {
      "outputs": [".next/**", "!.next/cache/**", "dist/**"],
      "dependsOn": ["^build", "^typecheck"]
    },
    "typecheck": {
      "dependsOn": ["^typecheck"],
      "inputs": ["**/*.ts", "**/*.tsx"],
      "outputs": ["node_modules/.cache/tsbuildinfo.json"]
    },
    "lint": {
      "dependsOn": ["^lint"],
      "outputs": []
    },
    "lint:fix": {
      "dependsOn": ["^lint", "^format:fix"],
      "outputs": []
    },
    "format:check": {
      "outputs": [],
      "inputs": ["**/*.{json,ts,js,mjs,mts,jsx,tsx,html,css,scss}"]
    },
    "format:fix": {
      "outputs": [],
      "inputs": ["**/*.{json,ts,js,mjs,mts,jsx,tsx,html,css,scss}"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "start": {
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    },
    "test": {
      "outputs": ["coverage/**"],
      "dependsOn": ["^test", "^build"],
      "inputs": [
        "src/**/*.{js,jsx,ts,tsx}",
        "**/mocks/**/*.{js,jsx,ts,tsx}",
        "**/__mocks__/**/*.{js,jsx,ts,tsx}",
        "src/test-setup/setup.ts",
        "src/setupTests.{js,jsx,ts,tsx}",
        "**/*.test.{js,jsx,ts,tsx}",
        "**/*.spec.{js,jsx,ts,tsx}",
        "package.json",
        "vitest.config.*",
        "jest.config.*"
      ]
    },
    "test:watch": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^test", "^build"],
      "inputs": [
        "src/**/*.{js,jsx,ts,tsx}",
        "**/mocks/**/*.{js,jsx,ts,tsx}",
        "**/__mocks__/**/*.{js,jsx,ts,tsx}",
        "src/test-setup/setup.ts",
        "src/setupTests.{js,jsx,ts,tsx}",
        "**/*.test.{js,jsx,ts,tsx}",
        "**/*.spec.{js,jsx,ts,tsx}",
        "package.json",
        "vitest.config.*",
        "jest.config.*"
      ]
    },
    "test:band": {
      "outputs": ["coverage/**"],
      "dependsOn": ["^test", "^build"],
      "inputs": [
        "src/**/*.{js,jsx,ts,tsx}",
        "**/mocks/**/*.{js,jsx,ts,tsx}",
        "**/__mocks__/**/*.{js,jsx,ts,tsx}",
        "src/test-setup/setup.ts",
        "src/setupTests.{js,jsx,ts,tsx}",
        "**/*.test.{js,jsx,ts,tsx}",
        "**/*.spec.{js,jsx,ts,tsx}",
        "package.json",
        "vitest.config.*",
        "jest.config.*"
      ]
    },
    "test:watchBand": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^test", "^build"],
      "inputs": [
        "src/**/*.{js,jsx,ts,tsx}",
        "**/mocks/**/*.{js,jsx,ts,tsx}",
        "**/__mocks__/**/*.{js,jsx,ts,tsx}",
        "src/test-setup/setup.ts",
        "src/setupTests.{js,jsx,ts,tsx}",
        "**/*.test.{js,jsx,ts,tsx}",
        "**/*.spec.{js,jsx,ts,tsx}",
        "package.json",
        "vitest.config.*",
        "jest.config.*"
      ]
    },
    "test:ci": {
      "outputs": ["coverage/**"],
      "dependsOn": ["^test", "^build"],
      "inputs": [
        "src/**/*.{js,jsx,ts,tsx}",
        "**/mocks/**/*.{js,jsx,ts,tsx}",
        "**/__mocks__/**/*.{js,jsx,ts,tsx}",
        "src/test-setup/setup.ts",
        "src/setupTests.{js,jsx,ts,tsx}",
        "**/*.test.{js,jsx,ts,tsx}",
        "**/*.spec.{js,jsx,ts,tsx}",
        "package.json",
        "vitest.config.*",
        "jest.config.*"
      ]
    },
    "test:e2e": {
      "outputs": ["coverage/**"],
      "dependsOn": ["^test", "^build"],
      "inputs": [
        "src/**/*.{js,jsx,ts,tsx}",
        "**/mocks/**/*.{js,jsx,ts,tsx}",
        "**/__mocks__/**/*.{js,jsx,ts,tsx}",
        "src/test-setup/setup-e2e.{js,jsx,ts,tsx}",
        "**/*e2e-test.{js,jsx,ts,tsx}",
        "**/*e2e-spec.{js,jsx,ts,tsx}",
        "cypress/**/*.{js,jsx,ts,tsx}",
        "package.json",
        "jest.e2e.config.*",
        "cypress.config.*"
      ]
    },
    "test:e2e:watch": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^test", "^build"],
      "inputs": [
        "src/**/*.{js,jsx,ts,tsx}",
        "**/mocks/**/*.{js,jsx,ts,tsx}",
        "**/__mocks__/**/*.{js,jsx,ts,tsx}",
        "src/test-setup/setup-e2e.{js,jsx,ts,tsx}",
        "**/*e2e-test.{js,jsx,ts,tsx}",
        "**/*e2e-spec.{js,jsx,ts,tsx}",
        "cypress/**/*.{js,jsx,ts,tsx}",
        "package.json",
        "jest.e2e.config.*",
        "cypress.config.*"
      ]
    },
    "test:e2e:band": {
      "outputs": ["coverage/**"],
      "dependsOn": ["^test", "^build"],
      "inputs": [
        "src/**/*.{js,jsx,ts,tsx}",
        "**/mocks/**/*.{js,jsx,ts,tsx}",
        "**/__mocks__/**/*.{js,jsx,ts,tsx}",
        "src/test-setup/setup-e2e.{js,jsx,ts,tsx}",
        "**/*e2e-test.{js,jsx,ts,tsx}",
        "**/*e2e-spec.{js,jsx,ts,tsx}",
        "cypress/**/*.{js,jsx,ts,tsx}",
        "package.json",
        "jest.e2e.config.*",
        "cypress.config.*"
      ]
    },
    "test:e2e:watchBand": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^test", "^build"],
      "inputs": [
        "src/**/*.{js,jsx,ts,tsx}",
        "**/mocks/**/*.{js,jsx,ts,tsx}",
        "**/__mocks__/**/*.{js,jsx,ts,tsx}",
        "src/test-setup/setup-e2e.{js,jsx,ts,tsx}",
        "**/*e2e-test.{js,jsx,ts,tsx}",
        "**/*e2e-spec.{js,jsx,ts,tsx}",
        "cypress/**/*.{js,jsx,ts,tsx}",
        "package.json",
        "jest.e2e.config.*",
        "cypress.config.*"
      ]
    },
    "test:e2e:ci": {
      "outputs": ["coverage/**"],
      "dependsOn": ["^test", "^build"],
      "inputs": [
        "src/**/*.{js,jsx,ts,tsx}",
        "**/mocks/**/*.{js,jsx,ts,tsx}",
        "**/__mocks__/**/*.{js,jsx,ts,tsx}",
        "src/test-setup/setup-e2e.{js,jsx,ts,tsx}",
        "**/*e2e-test.{js,jsx,ts,tsx}",
        "**/*e2e-spec.{js,jsx,ts,tsx}",
        "cypress/**/*.{js,jsx,ts,tsx}",
        "package.json",
        "jest.e2e.config.*",
        "cypress.config.*"
      ]
    },
    "test:cov": {
      "cache": false
    },
    "test:ui": {
      "cache": false
    },
    "test:cy": {
      "cache": false
    }
  }
}
