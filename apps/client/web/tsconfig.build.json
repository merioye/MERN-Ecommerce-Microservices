{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Next.js Build",
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": ["src", "next-env.d.ts", ".next/types/**/*.ts"],
  "exclude": [
    "node_modules",
    "**/__tests__",
    "**/__mocks__",
    "**/test",
    "**/tests",
    "**/mocks",
    "**/*.{test,spec}.?(c|m)[jt]s?(x)",
    "**/*.{e2e-test,e2e-spec}.?(c|m)[jt]s?(x)",
    "**/setupTests.ts"
  ]
}
