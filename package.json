{
  "name": "@repo",
  "private": true,
  "scripts": {
    "preinstall": "npx --yes only-allow pnpm",
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "typecheck": "turbo typecheck",
    "format:check": "turbo format:check",
