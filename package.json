    "clean": "git clean -xdf node_modules",
    "clean:workspaces": "turbo clean"
  },
  "devDependencies": {
    "turbo": "latest"
  },
  "packageManager": "pnpm@9.1.4",
  "engines": {
    "node": ">=18"
  }
}
